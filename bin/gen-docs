#!/bin/bash

./node_modules/.bin/typedoc \
  --excludeExternals \
  --excludeNotExported \
  --excludeProtected \
  --hideGenerator \
  --includeVersion \
  --mode modules \
  --theme minimal \
  ./lib/highlight.model.ts && \
echo 'include:
  - "_*_.html"
  - "_*_.*.html"' > ./docs/_config.yml
git add ./docs && \
git commit -m "update docs" && \
git push
